{
  "query": {
    "ui:placeholder": "Enter query expression",
    "ui:widget": "JsInput",
    "ui:options": {
      "multiline": true,
      "autoheight": true,
      "maxLines": 20,
      "popupEditor": "SchemaEditor",
      "scrollbar": {
        "vertical": "visible"
      },
      "language": "javascript"
    }
  },
  "connectionId": {
    "ui:widget": "ApiLookup",
    "ui:options": {
      "typeName": "database connection",
      "url": "/lib/database-connections",
      "valueProp": "id",
